@page
@model IndexModel
@{
    ViewData["Title"] = "";
}
@if (!Model.EstaLogueado)
{
    <div class="container"
         align="left"
         style="width:100%">
        <h3>
            Login
        </h3>

        <form method="POST">
            @* --- COMIENZA LA SECCIÓN PARA EL MENSAJE DE ERROR --- *@
            @if (ViewData["MensajeErrorLogin"] != null)
            {
                <div class="alert alert-danger" role="alert" style="margin-bottom: 15px; width:60%;">
                    @ViewData["MensajeErrorLogin"]
                </div>
            }
            @* --- TERMINA LA SECCIÓN PARA EL MENSAJE DE ERROR --- *@

            <div style="width:60%">
                <div class="form-group">
                    <label class="control-label">
                        Usuario:
                    </label>
                    <input onchange="keyUp(this)"
                           asp-for="@Model.Email"
                           class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">
                        Contrasena:
                    </label>
                    <input type="password"
                           onchange="keyUp(this)"
                           asp-for="@Model.Contrasena"
                           class="form-control" />
                </div>

                <input type="submit"
                       value="Limpiar"
                       asp-page-handler="BtClean"
                       class="btn btn-default" />
                <input type="submit"
                       value="Entrar"
                       asp-page-handler="BtEnter"
                       class="btn btn-default" />
            </div>
        </form>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">
            Bienvenido
        </h1>

        <form method="POST">
            <input type="submit"
                   value="Cerrar"
                   asp-page-handler="BtClose"
                   class="btn btn-default" />
        </form>
    </div>
}