@page
@model asp_presentacion.Pages.Ventanas.BolasModel
@{
    ViewData["Titulo"] = "Bolas";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Bolas</h3>
            </div>
            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.nombre" />
                <input type="hidden"
                       asp-for="@Model.Actual!.diametro" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Color" />
                <input type="hidden"
                       asp-for="@Model.Actual!.peso" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Bolas</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                nombre
                            </label>
                            <div class="col-lg-6">
                                <input id="nmEstudiante"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.nombre" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Diametro
                            </label>
                            <div class="col-lg-6">
                                <input id="nmMateria"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.diametro" />
                            </div>

                        </div class="form-group">          
                            <label class="col-lg-4 control-label">
                                color    
                            </label>
                            <div class="col-lg-6">
                                <input id="Nombre"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Color" />
                            </div>
                        

                    
                            <div class="form-group">
                                <label class="col-lg-4 control-label">
                                    Peso
                                </label>
                                <div class="col-lg-6">
                                    <input id="nmNota2"
                                           class="cts_forms form-control"
                                           asp-for="@Model.Actual!.peso" />
                                </div>
                            </div>


</div>

                    @* --- NUEVO CAMPO PARA SUBIR IMAGEN --- *@
                    <div class="form-group">
                        <label class="col-lg-4 control-label">
                            Imagen de la Bola
                        </label>
                        <div class="col-lg-6">
                            <input type="file"
                                   id="nmArchivoImagen"
                                   class="form-control"
                                   asp-for="ArchivoImagen"
                                   accept="image/*" /> @* El atributo accept sugiere al navegador filtrar por tipos de imagen *@
                        </div>
                        </div>
                        @* --- FIN NUEVO CAMPO PARA SUBIR IMAGEN --- *@
                        </div>
               
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                Desea borrar la entidad?
                            </h4>
                            <h6 align="left">
                                @Model.Actual!.nombre,
                                @Model.Actual!.diametro
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flNombre"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!.nombre"
                       placeholder="Nombre" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Diametro
                            </th>
                            <th class="cl_actions">
                                Color
                            </th>
                            <th class="cl_actions">
                                Peso
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.nombre
                                    </td>
                                    <td>
                                        @elemento.diametro
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento.Color
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento.peso
                                    </td>
                                    <td>
                                        <input type="submit"
                                               value="Modicar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>